{% assign module_id = module.name|identifier|capital %}
{% assign module_id_up = module.name|identifier|upcase %}
{% assign module_path = module.name|path -%}
set({{module_id_up}}_VERSION {{module.version}})
@PACKAGE_INIT@
INCLUDE("${CMAKE_CURRENT_LIST_DIR}/{{module.name|identifier|capitalize}}ApiTargets.cmake")
INCLUDE("${CMAKE_CURRENT_LIST_DIR}/{{module.name|identifier|capitalize}}CoreTargets.cmake")
INCLUDE("${CMAKE_CURRENT_LIST_DIR}/{{module.name|identifier|capitalize}}MonitorTargets.cmake")
INCLUDE("${CMAKE_CURRENT_LIST_DIR}/{{module.name|identifier|capitalize}}OLinkTargets.cmake")
INCLUDE("${CMAKE_CURRENT_LIST_DIR}/{{module.name|identifier|capitalize}}ImplementationTargets.cmake")
set_and_check({{module_id_up}}_INCLUDE_DIR "@PACKAGE_INCLUDE_INSTALL_DIR@")

# make sure we have all needed dependencies
include(CMakeFindDependencyMacro)
find_dependency(Threads REQUIRED)
find_dependency(apigear COMPONENTS poco-tracer poco-olink REQUIRED)

check_required_components({{module_id}}-api {{module_id}}-core {{module_id}}-monitor {{module_id}}-olink {{module_id}}-implementation)
